{
  "name": "CSSModulesExample",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "tsc": "tsc --project . --noEmit",
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest",
    "lint": "stylelint 'src/**/*.@(css|scss)'",
    "web": "webpack-dev-server --mode development",
