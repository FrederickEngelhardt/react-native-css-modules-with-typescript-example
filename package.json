    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "@types/react-fontawesome": "^1.6.3",
    "@types/react-native": "kristerkari/react-native-types-for-css-modules#v0.55.24",
    "autoprefixer": "^8.6.3",
    "babel-jest": "23.2.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-react-native-classname-to-style": "^1.2.1",
    "babel-plugin-react-native-platform-specific-extensions": "^1.1.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-native": "4.0.0",
    "css-loader": "^0.28.11",
